<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/statisticsPopView"
        android:layout_width="164dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="84dp"
        android:text="statisticsPopView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/moneyView"
        android:layout_width="164dp"
        android:layout_height="26dp"
        android:layout_marginStart="224dp"
        android:layout_marginTop="84dp"
        android:text="statisticsMoneyView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statisticsIncomeView"
        android:layout_width="164dp"
        android:layout_height="26dp"
        android:layout_marginStart="224dp"
        android:layout_marginTop="140dp"
        android:text="statisticsIncomeView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statisticsExpensesView"
        android:layout_width="164dp"
        android:layout_height="26dp"
        android:layout_marginStart="224dp"
        android:layout_marginTop="196dp"
        android:text="statisticsExpensesView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statisticsTurnView"
        android:layout_width="164dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="434dp"
        android:text="statisticsTurnView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/statisticsTurnButton"
        android:layout_width="164dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="480dp"
        android:text="Next Turn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/statisticsToolbar"
        android:layout_width="412dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statisticsProfitView"
        android:layout_width="164dp"
        android:layout_height="26dp"
        android:layout_marginStart="224dp"
        android:layout_marginTop="254dp"
        android:text="statisticsProfitView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>